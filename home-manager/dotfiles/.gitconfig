[column]
ui = auto

## Delta configuration (a diff ui for git)
[core]
pager = delta -- --syntax-theme=dark

[delta]
side-by-side = false
dark = true
features = decorations
line-numbers = true
paging = always

[interactive]
diffFilter = delta --color-only --features=interactive

[init]
defaultBranch = main

[delta "decorations"]
commit-style = raw
file-style = omit
hunk-header-decoration-style = blue box
hunk-header-file-style = red
hunk-header-line-number-style = "#067a00"
hunk-header-style = file line-number syntax

[merge]
conflictstyle = diff3

[diff]
colorMoved = default
